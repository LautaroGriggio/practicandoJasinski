package ejercicio2;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Principal {

	public static void main(String[] args) {
		
		
		Scanner s = new Scanner(System.in);
		int[][] personas = new int[10][4];
		
		for (int i = 0; i < personas.length; i++) {
			
		ingresarPersona(s, personas, i);
		}
		s.close();
		
	}
	
	
	public static int ingresarEntero(Scanner s, String mensaje, int MIN, int MAX) {
		
		boolean flag=false;
		int n;
		
		do {
			System.out.println(mensaje);
			try {
				n = s.nextInt();
				
				if(n>=MIN && n<=MAX) {
					flag=false;
					return n;
				}else {
					s.nextLine();
					System.out.println("El numero esta fuera de los parametros, intente otra vez");
					flag=true;
				}
			}catch(InputMismatchException e){
				s.nextLine();
				System.out.println("Ingresa un numero por favor");
				flag=true;
			}catch(Exception e) {
				s.nextLine();
				System.out.println("Error no contemplado intente otra vez");
				flag=true;
			}
			
			
		}while(flag);
		
		return 1;
	}
	
	public static void ingresarPersona(Scanner s, int[][] personas, int i) {
		int dni;
		boolean flag=false;
		do {
		
			System.out.println("Ingrese el DNI de la persona numero: "+ (i+1) + " (El DNI debe estar entre 10000000 y 99999999) ");
			personas[i][0]=ingresarEntero(s,"", 10000000, 99999999 );
			dni=personas[i][0];
			if(buscarSiExiste(personas, dni) == true) {
			System.out.println("Ese dni ya existe por ende no es valido");
			flag=true;
			}else {
				flag=false;
			}
		}while(flag);
		
		
		System.out.println("Es masculino (0) o femenino (1)");
		personas[i][1]=ingresarEntero(s,"", 0, 1 );
		System.out.println("Trabaja? si(1) no(0)");
		personas[i][2]=ingresarEntero(s,"", 0, 1 );
		
		if(personas[i][2]==1) {
			System.out.println("Ingrese su sueldo (Numero entre 6000, y 20000)  ");
			personas[i][3]=ingresarEntero(s,"", 6000, 20000 );
		}else {
			System.out.println("Listo, persona ingresada");
		}
				
			
			}


	public static boolean buscarSiExiste(int[][] personas, int dni) {
		boolean flag= false;
		int i=0;
		do {
			
			if(personas[i][0]== dni) {
				
				flag = true;
				System.out.println("Ese dni ya existe");
				return flag;

			}else {
				flag=false;
				i++;
			}
			
		}while(!flag || i<11);
		
		System.out.println("bien");
		return flag;
		
	}
}
